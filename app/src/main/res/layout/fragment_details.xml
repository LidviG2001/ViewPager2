<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fontFamily="@font/montserrat">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:orientation="vertical"

    android:background="#1C2230">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/values"
        android:layout_marginHorizontal="15dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:background="@drawable/values"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/values"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icons8_youtube_100"
                />

            <TextView
                android:id="@+id/channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="Content 1"
                android:textColor="@color/white"
                android:textSize="18sp" />
         </LinearLayout>

         <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="42dp"
         android:orientation="horizontal"
         android:layout_gravity="center_vertical"
         android:background="@drawable/values"
             android:layout_weight="1"
             >

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_weight="1"
                 android:layout_gravity="center_vertical"
                 android:src="@drawable/thumbs_up_black_icon"
             />

             <TextView
                 android:id="@+id/likes"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:layout_marginRight="10dp"
                 android:layout_weight="7"
                 android:gravity="center_vertical"
                 android:text="Content 2"
                 android:textColor="@color/white"
                 android:textSize="18sp" />
         </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/values"
        android:layout_marginHorizontal="15dp"
        android:scrollbars = "vertical">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Main text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:textColor="@color/white"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch in YouTube"
            android:textSize="24sp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center|center_vertical"
            android:background="@drawable/youtube_btn"
            android:textColor="@color/white"

            />
</LinearLayout>


</LinearLayout>
</ScrollView>